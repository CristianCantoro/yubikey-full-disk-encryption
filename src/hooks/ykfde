#!/usr/bin/bash

CONFFILE="/etc/ykfde.conf"

run_hook() {
    local _key
    local _timeout=10
    local _starttime
    local _endtime
    local _luksdev

    . "$CONFFILE"
    if [ -z "$YKFDE_DISK_UUID" -o -z "$YKFDE_LUKS_NAME" ]; then
        echo "ERROR: $CONFFILE must provide YKFDE_DISK_UUID /and/ YKFDE_LUKS_NAME."
        exit 1
    fi
    _luksdev="/dev/disk/by-uuid/$YKFDE_DISK_UUID"

    if [ -e "$_luksdev" ]; then
      echo "ERROR: ykfde can't find luks device '$_luksdev'. Please check YKFDE_DISK_UUID variable in '$CONFFILE'."
      exit 1;
    fi

    if [ -n "$YKFDE_TIMEOUT" ]; then
        _timeout=$YKFDE_TIMEOUT
    fi

    udevadm settle
    modprobe -a -q dm-crypt >/dev/null 2>&1

    if [ -n "$YKFDE_CHALLENGE" ]; then
        # Challenge is provided so let's try yubikey
        _starttime=$(date +%s)
        _endtime=$(date +%s)
        echo "Waiting $_timeout seconds for you to insert the yubikey ..."
        while [ -z "$_key" ]; do
            _key="$(ykchalresp $YKFDE_CHALLENGE 2>/dev/null | tr -d '\n' || true)"
            if [ $(( $_endtime - $_starttime )) -le $_timeout ]; then
                sleep 1
                _endtime=$(date +%s)
            else
                break
            fi
        done
    fi

    if [ -z "$_key" ]; then
        printf "Fallback to password to unlock the disk $YKFDE_DISK_UUID ($YKFDE_LUKS_NAME).\nEnter passphrase: "
        read -s _key
    fi

    echo "Decrypting..."

    printf "$_key" | cryptsetup luksOpen "$_luksdev" $YKFDE_LUKS_NAME -
    sleep 5
}
